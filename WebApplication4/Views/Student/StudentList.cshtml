    <p class="float-left">
        Name: <input type="text" name="searchString">
        <input type="submit" value="Search" />

    </p>
</form>*@

<form method="get" asp-action="StudentList">
    <input type="search" placeholder="Enter " value="@ViewData["GetStudentDetails"]" name="Stdsearch" />
    <input type="submit" value="Search" class="btn btn-primary" />
</form>

<p class="float-right">
    <a asp-action="Create" class="btn btn-outline-primary">Add New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.ActionLink("Edit", "Create", new { id = item.ID, item.Name, item.FName, item.Email, item.Mobile, item.Description, item.DeptID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "DeleteStd", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Do you really want to delete this record ')" })

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>


            </tr>
        }
    </tbody>
</table>
